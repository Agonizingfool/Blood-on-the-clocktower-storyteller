    { "name": "Empath",       "team": "Townsfolk", "revealType": "numeric", "randomPolicy": { "min": 0, "max": 2 } },
    { "name": "Fortune Teller","team": "Townsfolk", "revealType": "boolean", "randomPolicy": { "pTrue": 0.5 } },
    { "name": "Undertaker",   "team": "Townsfolk", "revealType": "token", "randomPolicy": { "pool": "Any" } },
    { "name": "Monk",         "team": "Townsfolk" },
    { "name": "Ravenkeeper",  "team": "Townsfolk", "revealType": "token", "randomPolicy": { "pool": "Any" } },
    { "name": "Virgin",       "team": "Townsfolk" },
    { "name": "Slayer",       "team": "Townsfolk" },
    { "name": "Soldier",      "team": "Townsfolk" },
    { "name": "Mayor",        "team": "Townsfolk" },
    { "name": "Butler",       "team": "Outsider" },
    { "name": "Drunk",        "team": "Outsider" },
    { "name": "Recluse",      "team": "Outsider" },
    { "name": "Saint",        "team": "Outsider" },
    { "name": "Poisoner",     "team": "Minion" },
    { "name": "Spy",          "team": "Minion" },
    { "name": "Scarlet Woman","team": "Minion" },
    { "name": "Baron",        "team": "Minion" },
    { "name": "Imp",          "team": "Demon" }
  ],

  "firstNight": [
    { "id": "evil_team_info", "text": "Evil Team Info (if 7+ players)", "ask": "Evil team, wake and see each other.", "revealType": "info_list" },
    { "id": "demon_bluffs", "role": "Imp", "ask": "Demon, these are your 3 bluffs.", "revealType": "token" },
    { "role": "Poisoner",      "ask": "Who do you want to poison?" },
    { "role": "Spy",           "ask": "Look at the Grimoire." },
    { "role": "Washerwoman",   "ask": "One of these 2 players is this Townsfolk.",  "revealType": "token",   "randomPolicy": { "pool": "Townsfolk" } },
    { "role": "Librarian",     "ask": "One of these 2 players is this Outsider (or 0).", "revealType": "token", "randomPolicy": { "pool": "Outsider", "allowZero": true, "pZero": 0.2 } },
    { "role": "Investigator",  "ask": "One of these 2 players is this Minion.",     "revealType": "token",   "randomPolicy": { "pool": "Minion" } },
    { "role": "Chef",          "ask": "This is how many pairs of evil neighbours.", "revealType": "numeric", "randomPolicy": { "values": [0,1,2,"≥3"] } },
    { "role": "Empath",        "ask": "Your number of evil neighbours?",            "revealType": "numeric", "randomPolicy": { "min": 0, "max": 2 } },
    { "role": "Fortune Teller","ask": "Point at 2 players; I’ll tell you if a Demon ping.", "revealType": "boolean", "randomPolicy": { "pTrue": 0.5 } },
    { "role": "Butler",        "ask": "Point at your Master." }
  ],

  "eachNight": [
    { "text": "Dusk - All eyes closed" },
    { "role": "Poisoner",      "ask": "Who do you want to poison?" },
    { "role": "Monk",          "ask": "Who do you want to protect tonight? (not yourself)" },
    { "role": "Spy",           "ask": "Look at the Grimoire." },
    { "role": "Scarlet Woman", "ask": "You are now the Demon.", "revealType": "token" },
    { "role": "Imp",           "ask": "Who do you want to kill? (self-kill passes Imp to a Minion)" },
    { "role": "Ravenkeeper",   "ask": "You died tonight. Point at a player to learn their role.", "revealType": "token", "randomPolicy": { "pool": "Any" } },
    { "role": "Undertaker",    "ask": "This executed player’s role is…", "revealType": "token", "randomPolicy": { "pool": "Any" } },
    { "role": "Empath",        "ask": "Your number of evil neighbours?", "revealType": "numeric", "randomPolicy": { "min": 0, "max": 2 } },
    { "role": "Fortune Teller","ask": "Point at 2 players. I’ll confirm Demon or not.", "revealType": "boolean", "randomPolicy": { "pTrue": 0.5 } },
    { "role": "Butler",        "ask": "Point at your Master." },
    { "text": "Dawn - All eyes open" }
  ]
}